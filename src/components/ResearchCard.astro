---
// filepath: /Users/dalvin/Developer/sintesia-landing/src/components/ResearchCard.astro
interface Props {
  slug: string;
  title: string;
  date: string;
  summary: string;
  image?: string;
  tags: string[];
}

const { slug, title, date, summary, image, tags } = Astro.props;
---
<a href={`/research/${slug}/`} class="block bg-gray-900/50 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 hover:bg-gray-800/70">
  {image && <img transition:animate="fade" transition:name={`img-${slug}`} src={image} alt={title} class="w-full h-48 object-cover rounded-md mb-4" />}
  <h3 transition:name={`title-${slug}`} transition:animate="fade" class="text-2xl font-bold mb-2 text-white">{title}</h3>
  <p class="text-sm text-gray-400 mb-3">{new Date(date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
  <p class="text-gray-300 mb-4">{summary}</p>
  <div class="flex flex-wrap gap-2 mb-4">
    {tags.map((tag: string) => (
      <span class="bg-gray-700 text-gray-300 px-2 py-1 text-xs font-semibold rounded-full">{tag}</span>
    ))}
  </div>
  <span class="text-white font-semibold hover:underline">Leer m√°s &rarr;</span>
</a>
